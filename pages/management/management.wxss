/* pages/management/management.wxss */
.box1 {
    border: 2px solid rgb(252, 248, 248);
    border-radius: 5px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.txt {
    margin-left: 15px;
    padding: 10px 0;
    font-weight: 600;
}

switch {
    zoom: 0.8;
    color: blue !important;
    margin-right: 15px;
}

.box2 {
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.box2 image {
    width: 15px;
    height: 15px;
    margin-left: 15px;
    margin-right: 15px;
}

.add {
    width: 100%;
    border-top: 2px solid rgb(252, 248, 248);
    border-radius: 5px;
    display: flex;
    height: 40px;
    font-size: 13px;
    font-weight: 600;
    align-items: center;
}

.tips {
    background-color: rgb(236, 231, 231);
    padding: 5px;
}

text {
    margin: 15px;
    color: gray;
    font-size: 12px;
}

.power {
    color: gray;
    font-size: 13px;
    display: flex;
    border-top: 2px solid rgb(252, 248, 248);
    border-bottom: 2px solid rgb(252, 248, 248);
    border-radius: 5px;
    height: 40px;
    font-size: 13px;
    align-items: center;
}

.power1 {
    display: flex;
    position: fixed;
    right: 15px;
}

.power1 image {
    margin-left: 5px;
    margin-top: 2px;
}