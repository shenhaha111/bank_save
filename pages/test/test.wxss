/* pages/test/test.wxss */
.banner {
    width: 100%;
    height: 160px;
}

.headarea {
    width: calc(100% - 40px);
    margin-left: 20px;
    display: flex;
    justify-content: space-between;
    margin-top: 15px;
}

.bodyarea {
    width: 70px;
    display: flex;
    flex-direction: column;
    text-align: center;
}

.bodyarea text {
    font-size: 14px;
    font-weight: 500;
    color: #666666;
    line-height: 20px;
    margin-top: 10px;
}

.pic {
    width: 50px;
    height: 50px;
    background: linear-gradient(180deg, #3BCDFC 0%, #2079F2 100%);
    border-radius: 14px 14px 14px 14px;
    opacity: 1;
    margin-left: 10px;
}

.centerWrap {
    margin-top: 15px;
    margin-left: 10px;
    display: flex;
    flex-direction: column;
}

.titlewrap {
    margin-left: 15px;
    display: flex;
    flex-direction: row;
}

.test {
    height: 18px;
    border-left: 1px solid #27B8B8;
}

.title {
    color: #252121;
    font-size: 15px;
    text-indent: 8px;
}

.msgWrap {
    margin-top: -10px;
}

.msgWrap text {
    font-weight: 400;
    color: #BCBCBC;
    line-height: 22px;
    text-indent: 60px;
    text-align: left;
}
.msgWrap image {
    width: 97%;
    height: 190px;
    margin-top: 10px;
}