/* pages/book/book.wxss */
.headWrap {
    width: 100%;
    height: 52px;
    background: linear-gradient(45deg, #2957d5 0%, #2788e3 100%);
    box-shadow: 0px 0px 4px rgba(23, 23, 23, 0.5);
}

.icon_date {
    width: 26px;
    height: 26px;
    float: right;
}

.date-box {
    width: 100%;
    color: #fff;
    margin-left: 20px;
}

.date-box>view {
    position: relative;
    display: inline-block;
    text-align: center;
    vertical-align: middle;
    overflow: hidden;
}

.date-head {
    height: 40px;
    width: 40px;
    font-size: 12px;
    margin-top: 6px
}

.nowDay .date-head {
    text-align: center;
    color: #27B8B8;
    background: white;
    border-radius: 50%;
}

.listcontent {
    width: 97%;
    margin: 10px;
}

.contentitem {
    margin-top: 10px;
    height: 100px;
    width: 97%;
    border-radius: 5px;
    border: 1px solid rgb(240, 238, 238);
    display: flex;
    flex-direction: row;
    align-items: center;
}

.information {
    height: 80px;
    line-height: 20px;
    margin-left: 10px;
    margin-top: 20px;
}

.btn {
    flex-grow: 1;
}

.title {
    color: blue;
}

.name {
    color: gray;
}

.time {
    color: gray
}