}

.page {
    background-color: rgb(214, 208, 208);
    width: 30px;
    height: 25px;
    font-size: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 10px;
}

.pagebox {
    display: flex;
    justify-content: flex-end;
    margin: 10px;
    color: gray;
}